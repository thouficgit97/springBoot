# Build Stage
FROM maven:3.9.4-eclipse-temurin-21-alpine AS build
COPY . .
RUN mvn clean package -DskipTests

# Run Stage (Use a full JDK image to ensure Java is available)
FROM eclipse-temurin:21-jdk
WORKDIR /app
COPY --from=build /target/CarRental-0.0.1-SNAPSHOT.jar demo.jar
EXPOSE 8080
ENTRYPOINT [ "java", "-jar", "demo.jar" ]
